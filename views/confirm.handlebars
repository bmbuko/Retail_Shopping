			<div class="row">

				<div class="col-sm-6">
					<div class="total_area">
            <form action="/finish" method="post">
						<ul>

							<li>Product name <span>{{list.name}}</span></li>
							<li>Price <span>R{{list.cost}}</span></li>
							<li>Size <span>{{list.sizes}}</span></li>
							<li>Colour <span>{{list.colour}}</span></li>
              	<li>Quantity <span>{{list.quantity}}</span></li>
                <li>Payment Type <span>{{thePayment}}</span></li>
						</ul>
 <button type="submit" class="btn btn-primary" name="price" value="/images/b.jpg" >Finish</button>
 </form>
					</div>
				</div>
			</div>
		</div>
	</section><!--/#do_action-->

	  <script>
    fbq('track', 'Purchase', {currency: "ZAR", value: '{{list.myTotal}}'});
  </script>
