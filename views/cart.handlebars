<head>

	<title>Accel-Shopping | Shopping-Cart</title>
		  <script type="text/javascript" language="JavaScript">
function removeFromCart(){

		dataLayer.push({
			'event': 'remove_from_cart',
			'ecommerce': {
				'items': [
					{
						'item_name': '{{list.name}}',       // Name or ID is required.
						'price': '{{list.cost}}',
						'item_category': '{{list.category}}',
						'quantity':'{{list.quantity}}'
						
						
					}]
			}
		});
	
}

function beginCheckout(){

		dataLayer.push({
			'event': 'begin_checkout',
			'ecommerce': {
				'items': [
					{
						'item_name': '{{list.name}}',      
						'price': '{{list.cost}}',
						'item_category': '{{list.category}}',
						'item_variant:':'{{list.colour}}'
						'quantity':'{{list.quantity}}'
						
						
					}]
			}
		});
	
}
 </script>

